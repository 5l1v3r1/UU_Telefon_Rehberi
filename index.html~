<!-- ------------------------------------------------------------------------------ -->

<!-- Ilk arama ekrani divi. ID numarasi 0. Tum elementler icinde -->
		<div id=ismeGoreArama> 
			<input id='isim' type="text" onkeyup="sorguDegistir()">
			<button id="find">Bul</button><br><br>
			<form>
				<input type="radio" name="how"
				 value="tumu" checked>
				<label id="T_A">Tumunde ara </label><br>

