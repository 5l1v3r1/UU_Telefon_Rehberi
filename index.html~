<!-- Hakkinda ekrani divi.ID numarasi 3. Tum elementler icinde -->
		<div id="hakkinda" style="display:NONE">
			Porjenin sonunda yazilacak!
		</div>


			<script>


function divDegis(param){
	var icerikler = ["ismeGoreArama", "birimeGoreArama", "yoneticiGirisi", "hakkinda"];

	for (var i=0; i<icerikler.length; i++){
		document.getElementById(icerikler[i]).style.display="NONE";
	}
	document.getElementById(icerikler[param]).style.display="block";
}


function sorguDegistir(){
	var inInput = document.getElementById("isim").value;
	document.getElementById("T_A").innerHTML = "Icinde '"+inInput+"' geceni ara";
	document.getElementById("Y_A").innerHTML = "Yalnizca '"+inInput+"' kelimesini ara";
	return 0;
}

			</script>
